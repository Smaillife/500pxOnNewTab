{
  "name": "__MSG_extensionName__",
  "version": "1.0",
  "description": "__MSG_description__",
  "icons": {
    "16": "img/image16.png",
    "32": "img/image32.png",
    "64": "img/image64.png",
    "128": "img/image128.png",
    "256": "img/image256.png",
    "512": "img/image512.png"
  },
  "author": "Rom",
  "homepage_url": "https://github.com/xerta555/",
  "default_locale": "en",
  "applications": {
    "gecko": {
      "id": "500pxOnNewTab@xerta555.github.io",
      "strict_min_version": "57.0"
    }
  },
  "chrome_url_overrides": {
    "newtab": "html/NewTab.html"
  },
  "background": {
    "scripts": [
      "settings.js",
      "background.js",
      "lib/500pxwall.zip"
    ]
  },
  "omnibox": {
    "keyword": "newtab"
  },
  "browser_action": {
    "default_icon": "img/image32-light.png,",
    "theme_icons": [
      {
        "light": "img/image32-light.png",
        "dark": "img/image32-grey.png",
        "size": 32
      }
    ],
    "default_title": "__MSG_defaultNewTabtitle__",
    "default_popup": "html/Actions.html",
    "browser_style": true
  },
  "options_ui": {
    "page": "/html/Options.html",
    "open_in_tab": true
  },
  "permissions": [
    "<all_urls>",
    "sessions",
    "storage",
    "tabs",
    "topSites",
    "webNavigation",
    "menus"
  ],
  "optional_permissions": [
  "bookmarks",
  "downloads",
  "browserSettings"
  ],
  "manifest_version": 2
}
